<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".PromocionesActivity"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="promociones"
                android:textSize="22sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginVertical="130dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/caja1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSuperHeroName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivSuperHero1"
                            tools:ignore="MissingConstraints"
                            tools:text="Promo 1:" />

                        <TextView
                            android:id="@+id/tvRealName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero1"
                            app:layout_constraintTop_toBottomOf="@id/tvSuperHeroName1"
                            tools:text="Alisado" />

                        <TextView
                            android:id="@+id/tvPublisher1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero1"
                            app:layout_constraintTop_toBottomOf="@id/tvRealName1"
                            tools:text="$60.00" />

                        <ImageView
                            android:id="@+id/ivSuperHero1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/promo"
                            tools:background="@color/white" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/caja2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp">


                        <ImageView
                            android:id="@+id/ivSuperHero2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/promo"
                            tools:background="@color/white" />


                        <TextView
                            android:id="@+id/tvSuperHeroName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivSuperHero2"
                            tools:ignore="MissingConstraints"
                            tools:text="Promo 2:" />

                        <TextView
                            android:id="@+id/tvRealName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero2"
                            app:layout_constraintTop_toBottomOf="@id/tvSuperHeroName2"
                            tools:text="Sellador de puntas" />

                        <TextView
                            android:id="@+id/tvPublisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero2"
                            app:layout_constraintTop_toBottomOf="@id/tvRealName2"
                            tools:text="$50.00" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/caja3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp">


                        <ImageView
                            android:id="@+id/ivSuperHero3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/promo"
                            tools:background="@color/white" />


                        <TextView
                            android:id="@+id/tvSuperHeroName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivSuperHero3"
                            tools:ignore="MissingConstraints"
                            tools:text="Promo 3:" />

                        <TextView
                            android:id="@+id/tvRealName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero3"
                            app:layout_constraintTop_toBottomOf="@id/tvSuperHeroName3"
                            tools:text="Balayage" />

                        <TextView
                            android:id="@+id/tvPublisher3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/ivSuperHero3"
                            app:layout_constraintTop_toBottomOf="@id/tvRealName3"
                            tools:text="$80.00" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
